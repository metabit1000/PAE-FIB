<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/barImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/barNameText"
        android:layout_below="@+id/barImage"
        android:layout_alignParentLeft="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/adressText"
        android:layout_below="@+id/barNameText"
        android:layout_alignParentLeft="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textColor="#808080"
        android:textSize="17sp" />

    <CheckBox
        android:id="@+id/visitedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_below="@id/barImage"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/barNameText"
        android:clickable="false"
        android:scaleX="2"
        android:scaleY="2"/>

    <Button
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barImage"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/visitedCheckBox"
        android:background="@color/colorBarGo"
        android:text="@string/info"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
</RelativeLayout>


